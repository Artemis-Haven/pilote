{% extends '::base.html.twig' %}

{% block body -%}
    <h1>CheckListOption</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Optiontext</th>
                <td>{{ entity.optionText }}</td>
            </tr>
            <tr>
                <th>Checked</th>
                <td>{{ entity.checked }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ entity.position }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('checklistoption') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('checklistoption_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
