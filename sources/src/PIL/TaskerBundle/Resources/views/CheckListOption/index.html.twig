{% extends '::base.html.twig' %}

{% block body -%}
    <h1>CheckListOption list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Optiontext</th>
                <th>Checked</th>
                <th>Position</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('checklistoption_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.optionText }}</td>
                <td>{{ entity.checked }}</td>
                <td>{{ entity.position }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('checklistoption_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('checklistoption_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('checklistoption_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
