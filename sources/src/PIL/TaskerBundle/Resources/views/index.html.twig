{% extends "::base.html.twig" %}

{% block body %}
	<div class="container boardList">
		<div class="row">
			{% for board in boardList %}
				<a href="{{ path("piltasker_board", {'boardId': board.id}) }}" class="col-sm-4 vignette">
					<div class="well">
						<span onClick="window.location.href='{{ path('board_delete_check', {'id': board.id}) }}'; return false;" title="Supprimer" 
							class="glyphicon glyphicon glyphicon-remove pull-right"></span> 
						<span onClick="window.location.href='{{ path('board_edit', {'id': board.id}) }}'; return false;" title="Renommer" 
							class="glyphicon glyphicon glyphicon-edit pull-right"></span> 
						<h4>{{ board }}</h4>
						<p>{{ board.description }}</p>
					</div>
				</a>
			{% endfor %}
			<a href="{{ path("board_new") }}" class="col-sm-4 vignette nouvelle-vignette">
				<div class="well">
					<h4>Cr√©er un nouveau projet</h4>
				</div>
			</a>
		</div>
	</div>
{% endblock %}